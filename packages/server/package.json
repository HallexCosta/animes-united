{
  "extends": "../../babel.config.js",
  "name": "@animes-united/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:babel": "babel src --extensions \".js,.ts\" --out-dir ../../dist/server --copy-files --no-copy-ignored",
    "build": "rimraf dist && sucrase ./src -d ./dist --transforms typescript,imports",
    "start:development": "ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
    "start:development:watch": "nodemon -L",
    "start:production": "node ../../dist/server/src/server.js",
    "test:jest": "jest --passWithNoTests --no-cache --runInBand --detectOpenHandles --colors --forceExit",
    "test": "mocha --config .mocharc.js",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --config .mocharc-ci.js",
    "install:ci": "yarn install --fronzen-lockfile"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "mongodb": "^3.6.3",
    "puppeteer": "^5.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/http-proxy": "^1.17.6",
    "@types/mongodb": "^3.6.3",
    "@types/puppeteer": "^5.4.2",
    "@types/supertest": "^2.0.10",
    "nodemon": "^2.0.9",
    "sucrase": "^3.17.1",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0"
  },
  "private": true
}
