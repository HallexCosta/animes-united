{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/mobile",
    "rootDir": "./src", 
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components/index.tsx"],
      "@screens/*": ["./src/screens/*"],
      "@screens": ["./src/screens/index.tsx"],
      "@assets/*": ["./src/assets/*"]
    },
  },
  "include": [
    "src/**/*"
  ]
}
